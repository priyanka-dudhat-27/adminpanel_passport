<%-include('header')%>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Edit Admin Details</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/admin/">Dashboard</a></li>
                            <li><a href="/admin/addAdmin">Add</a></li>
                            <li><a href="/admin/viewAdmin">View</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">


        <div class="row">
           
            <% var fullName=adminData.name.split(' ')%>
            <div class="col-lg-6">
                <div class="card">
                    <div class="card-header">
                        <strong>Add Admin Details</strong> 
                    </div>
                    <div class="card-body card-block">
                        <form action="/admin/editAdmin/<%=adminData.id%>" method="post" enctype="multipart/form-data" class="form-horizontal"    >
                           
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">First Name</label></div>
                                <div class="col-12 col-md-9"><input type="text" name="fname" value="<%=fullName[0]%>" placeholder="Enter First Name" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="text-input" class=" form-control-label">Last Name</label></div>
                                <div class="col-12 col-md-9"><input type="text" name="lname" value="<%=fullName[1]%>" placeholder="Enter Last Name" class="form-control"></div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="email-input" class=" form-control-label">Email</label></div>
                                <div class="col-12 col-md-9"><input type="email" id="email-input" name="email" value="<%=adminData.email%>" placeholder="Enter Email" class="form-control"></div>
                            </div>
                        
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="textarea-input" class=" form-control-label">Message</label></div>
                                <div class="col-12 col-md-9"><textarea name="message" id="textarea-input" rows="5" placeholder="Enter Message" class="form-control"><%=adminData.message%></textarea></div>
                            </div>

                            <%var city=['Surat','Mumbai','Vadodara','Rajkot']%>
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="select" class=" form-control-label">City</label></div>
                                <div class="col-12 col-md-9">
                                    <select name="city" id="select" class="form-control">
                                        <option value="0">--select-city--</option>
                                        <%city.map((v)=>{%>
                                            <option value="<%=v%>" <% if(adminData.city==v){%><%='selected'%><%}%>><%=v%></option>
                                        <%})%>
                                        
                                    </select>
                                </div>
                            </div>
                          
                            <div class="row form-group">
                                <div class="col col-md-3"><label class=" form-control-label">Gender</label></div>
                                <div class="col col-md-9">
                                    <div class="form-check-inline form-check">
                                        <label for="inline-radio1" class="form-check-label ">
                                            <input type="radio" id="inline-radio1" name="gender" value="male" class="form-check-input" <% if(adminData.gender=='male'){%><%='checked'%><%}%>>Male
                                        </label>
                                        <label for="inline-radio2" class="form-check-label ">
                                            <input type="radio" id="inline-radio2" name="gender" value="female" class="form-check-input"<% if(adminData.gender=='female'){%><%='checked'%><%}%>>Female
                                        </label>
                                        <label for="inline-radio3" class="form-check-label ">
                                            <input type="radio" id="inline-radio3" name="gender" value="others" class="form-check-input"<% if(adminData.gender=='others'){%><%='checked'%><%}%>>Others
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <div class="row form-group">
                                <div class="col col-md-3"><label class=" form-control-label">Hobby</label></div>
                                <div class="col col-md-9">
                                    <div class="form-check">
                                        <div class="checkbox">
                                            <label for="checkbox1" class="form-check-label ">
                                                <input type="checkbox" id="checkbox1" name="hobby" value="adventure" class="form-check-input" <% if(adminData.hobby.includes('adventure')){%><%='checked'%><%}%>>Adventure
                                            </label>
                                        </div>
                                        <div class="checkbox">
                                            <label for="checkbox2" class="form-check-label ">
                                                <input type="checkbox" id="checkbox2" name="hobby" value="music" class="form-check-input" <% if(adminData.hobby.includes('music')){%><%='checked'%><%}%>>Music
                                            </label>
                                        </div>
                                        <div class="checkbox">
                                            <label for="checkbox3" class="form-check-label ">
                                                <input type="checkbox" id="checkbox3" name="hobby" value="reading" class="form-check-input"<% if(adminData.hobby.includes('reading')){%><%='checked'%><%}%>>Reading
                                            </label>
                                        </div>
                                    </div>
                                </div>
                            </div>
                           
                            <div class="row form-group">
                                <div class="col col-md-3"><label for="file-input" class=" form-control-label">Image</label></div>
                                <div class="col-12 col-md-9"><input type="file" id="file-input" name="image" class="form-control-file"></div>
                                <img src="<%=adminData.image%>" alt="" width="100" height="100">
                            </div>
                           
                            <button type="submit" class="btn btn-primary btn-sm">
                                <i class="fa fa-dot-circle-o"></i> Update
                            </button>
                        </form>
                    </div>
                </div>
            </div>
    </div>


</div><!-- .animated -->
<%-include('footer')%>