<%-include('header')%>
<div class="breadcrumbs">
    <div class="breadcrumbs-inner">
        <div class="row m-0">
            <div class="col-sm-4">
                <div class="page-header float-left">
                    <div class="page-title">
                        <h1>Dashboard</h1>
                    </div>
                </div>
            </div>
            <div class="col-sm-8">
                <div class="page-header float-right">
                    <div class="page-title">
                        <ol class="breadcrumb text-right">
                            <li><a href="/admin/">Dashboard</a></li>
                            <li><a href="/admin/addAdmin">Add</a></li>
                            <li><a href="/admin/viewAdmin">view</a></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="content">
    <div class="animated fadeIn">
        <div class="row">
        
        <div>
            <div class="card">
                <div class="card-header">
                    <strong class="card-title">View Admin Details</strong>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead class="thead-dark">
                            <tr>
                              <th scope="col">No</th>
                              <th scope="col">Name</th>
                              <th scope="col">Email</th>
                              <th scope="col">City</th>
                              <th scope="col">Gender</th>
                              <th scope="col">Hobby</th>
                              <th scope="col">Message</th>
                              <th scope="col">Image</th>
                              <th scope="col">Action</th>
                          </tr>
                      </thead>

                      <%var no=1;for (let ad of adminData){%>
                            <tbody>
                                <tr>
                                    <td><%=no++%></td>
                                    <td><%=ad.name%></td>
                                    <td><%=ad.email%></td>
                                    <td><%=ad.city%></td>
                                    <td><%=ad.gender%></td>
                                    <td><%=ad.hobby%></td>
                                    <td><%=ad.message%></td>
                                    <td><img src="<%=ad.image%>" width="100" height="100" alt=""></td>
                                    <td>
                                        <a href="/admin/deleteRecord/<%=ad.id%>" style="color: red;"><i class="fa fa-trash"></i></a>  ||
                                        <a href="/admin/updateRecord/<%=ad.id%>" style="color:blue;"><i class="fa fa-edit"></i></a>  
                                    </td>
                                </tr>
                            </tbody>
                      <%}%>
                     
                </table>

            </div>
        </div>
    </div>





</div>
</div><!-- .animated -->
</div><!-- .content -->

<div class="clearfix"></div>
<%-include('footer')%>